<!-- views/emails/wishlist-notification.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; }
    .header { background-color: #4CAF50; color: white; padding: 10px; text-align: center; border-radius: 10px 10px 0 0; }
    .content { padding: 20px; }
    .button { display: inline-block; padding: 10px 20px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>New Opening in Your Wishlisted Listing!</h1>
    </div>
    <div class="content">
      <p>Hello {{name}},</p>
      <p>We noticed that a listing you wishlisted now has an opening. Here are the details:</p>
      <p><strong>{{listing.title}}</strong></p>
      <p>{{listing.description}}</p>
      <p><strong>Address:</strong> {{listing.address}}</p>
      <p>Hurry and book your spot before it's gone!</p>
      <a href="{{listingUrl}}" class="button">View Listing</a>
    </div>
  </div>
</body>
</html>